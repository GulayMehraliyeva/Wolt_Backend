@model MenuCategoryCreateVM

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RestaurantId">Restaurant</label>
        <select asp-for="RestaurantId" asp-items="Model.Restaurants" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>