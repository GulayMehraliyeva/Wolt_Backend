@model MenuCategoryEditVM

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" accept="image/*" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RestaurantId">Category</label>
        <select asp-for="RestaurantId" asp-items="Model.Restaurants" class="form-control">
            <option value="">-- Select Restaurant --</option>
        </select>
        <span asp-validation-for="RestaurantId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <a asp-controller="MenuCategory" asp-action="Index" class="btn btn-light">Cancel</a>
</form>