@model CourierRegisterVM

<form method="post" asp-controller="Courier" asp-action="CourierRegister" style="max-width: 500px; margin: auto;">
    <div class="text-danger mb-3" asp-validation-summary="All"></div>

    <div class="mb-3">
        <label class="form-label">Enter your Full Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Full Name" />
        <span asp-validation-for="FullName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter your Username</label>
        <input asp-for="UserName" class="form-control" placeholder="Username" />
        <span asp-validation-for="UserName" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter your Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter your Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter Vehicle Type</label>
        <input asp-for="VehicleType" class="form-control" placeholder="Vehicle Type" />
        <span asp-validation-for="VehicleType" class="text-danger small"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
        <label class="form-check-label" for="IsAvailable">Is Available</label>
        <span asp-validation-for="IsAvailable" class="text-danger small d-block"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter your Password</label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm your Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Register</button>

    
</form>
