@model RestaurantDetailVM

@{
    ViewData["Title"] = "Restaurant Details";
}

<div class="container mt-4">
    <h2>@Model.Name</h2>

    <img src="~/assets/images/@Model.Image" alt="@Model.Name" class="img-fluid mb-3" style="max-height:300px;" />

    <div>
        <strong>Address:</strong> @Model.Address<br />
        <strong>Phone:</strong> @Model.Phone<br />
        <strong>Category:</strong> @Model.CategoryName<br />
        <strong>Estimated Delivery Time:</strong> @Model.EstimatedDeliveryTime minutes<br />
        <strong>Delivery Cost:</strong> $@Model.DeliveryCost
    </div>

    <hr />
    <h4>Reviews</h4>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews)
        {
            <div class="border p-2 mb-2">
                <strong>@review.CustomerName</strong>
                <span class="text-warning">(@review.Rating ★)</span>
                <p>@review.Comment</p>
            </div>
        }
    }
    else
    {
        <p>No reviews yet.</p>
    }
</div>

