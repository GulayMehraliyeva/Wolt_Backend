@model IEnumerable<RestaurantVM>

@* @section Styles {
    <link rel="stylesheet" href="~/assets/css/home.css" />
} *@

<main>
    <section id="search-results">
        <div class="container">
            <h2 class="text-center mt-4">Axtarış nəticələri</h2>

            @if (!Model.Any())
            {
                <p class="text-center mt-3 text-danger">Nəticə tapılmadı.</p>
            }
            else
            {
                <div class="row mt-4">
                    @foreach (var restaurant in Model)
                    {
                        <div class="col-3 col-sm-6 col-md-4 col-lg-3 col-xl-3">
                            <div class="restaurant-card">
                                <div class="image">
                                    <a asp-controller="Restaurant" asp-action="Detail" asp-route-id="@restaurant.Id">
                                        <img src="~/assets/images/@restaurant.Image" class="img-fluid rounded" />
                                    </a>
                                </div>
                                <div class="content">
                                    <div class="res-cat">
                                        <h5 style="margin-left:9px; font-weight:bold;">@restaurant.Name</h5>
                                        <p style="margin-left:9px">@restaurant.CategoryName</p>
                                    </div>
                                    <div class="rating" style="margin-top:13px">
                                        <span><i class="fa-solid fa-star"></i> 5</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
</main>


<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* full viewport height */
    }

    main {
        flex: 1; /* take all remaining space */
    }
    h2 {
        color: white;
        text-align: center;
        transform: translateY(20px);
    }

    .restaurant-card {
        margin-top: 40px;
        width: 280px; /* slightly smaller width */
        height: auto; /* let height be automatic based on content */
        border: 1px solid rgba(255, 255, 255, 0.1); /* lighter border */
        background-color: #1a1a1a;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 25px;
        color: #fff;
        display: flex;
        flex-direction: column;
    }

        .restaurant-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 20px rgba(0, 157, 224, 0.6);
        }

        .restaurant-card .image img {
            width: 100%;
            height: 160px; /* slightly smaller image height */
            object-fit: cover;
            display: block;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .restaurant-card .content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            color: #fff;
            /* removed transform, unnecessary here */
            flex-grow: 1;
        }

            .restaurant-card .content .res-cat {
                flex-grow: 1;
            }

            .restaurant-card .content h5 {
                margin: 0 0 5px 0;
                font-weight: 700;
                font-size: 1.1rem;
            }

            .restaurant-card .content p {
                margin: 0;
                font-size: 0.9rem;
                color: #bbb;
            }

            .restaurant-card .content .rating {
                margin-left: 10px;
                white-space: nowrap;
            }

                .restaurant-card .content .rating span {
                    display: inline-block;
                    background-color: #009de0;
                    padding: 5px 12px;
                    border-radius: 12px;
                    font-size: 0.85rem;
                    color: #fff;
                    font-weight: 600;
                }

                .restaurant-card .content .rating i {
                    color: #ffd700;
                    margin-right: 6px;
                }


</style>