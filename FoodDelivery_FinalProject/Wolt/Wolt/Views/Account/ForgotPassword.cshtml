@model ForgotPasswordVM

<div class="forgot-password-container">
    <form asp-action="ForgotPassword" method="post">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
        <button type="submit">Send Reset Link</button>
    </form>
</div>

<style>
    .forgot-password-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: #1a1a1a;
        border-radius: 8px;
        color: #fff;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.05);
    }

        .forgot-password-container label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #ddd;
        }

        .forgot-password-container input[type="email"] {
            width: 100%;
            padding: 10px;
            background-color: #2a2a2a;
            border: 1px solid #444;
            border-radius: 4px;
            color: #fff;
            margin-bottom: 10px;
        }

            .forgot-password-container input[type="email"]::placeholder {
                color: #888;
            }

        .forgot-password-container span.field-validation-error {
            color: #ff4d4d;
            font-size: 0.9em;
        }

        .forgot-password-container button[type="submit"] {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .forgot-password-container button[type="submit"]:hover {
                background-color: #0056b3;
            }
</style>
<script>
    @if (TempData["ResetLinkSent"]?.ToString() == "true")
    {
        <text>alert("Reset link sent to your mail.");</text>
    }
</script>
